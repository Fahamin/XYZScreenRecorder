<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controls_main_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="-50dp"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgTools_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/shape"
            android:elevation="2dp"
            android:padding="10dp"
            android:src="@drawable/ic_tools_app"
            app:layout_constraintBottom_toTopOf="@+id/btnMarkOptions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnMarkOptions" />

        <ImageView
            android:id="@+id/recorder_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_record"
            android:tint="#e53935"
            app:layout_constraintBottom_toTopOf="@+id/btnMarkOptions"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/screenshot_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            android:background="@drawable/shape"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_app"
            android:tint="#ff6100"
            app:layout_constraintBottom_toBottomOf="@+id/btnMarkOptions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkOptions" />

        <ImageView
            android:id="@+id/panel_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_setting"
            android:tint="#ff6100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkOptions" />

        <ImageView
            android:id="@+id/btnMarkOptions"
            android:layout_width="@dimen/size_bubble_icon"
            android:layout_height="@dimen/size_bubble_icon"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controls_recorder_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="-36dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/controls_main_left"
        app:layout_constraintEnd_toEndOf="@+id/controls_main_left"
        app:layout_constraintStart_toStartOf="@+id/controls_main_left"
        app:layout_constraintTop_toTopOf="@+id/controls_main_left">

        <ImageView
            android:id="@+id/resume_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/shape"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:tint="#e53935"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_left"
            app:layout_constraintCircleAngle="315"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pause_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:padding="8dp"
            android:src="@drawable/ic_pause_black_24dp"
            android:tint="#ff6100"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_left"
            app:layout_constraintCircleAngle="315"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/stop_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_stop_black_24dp"
            android:tint="#ff6100"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_left"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tools_record_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_tools_app"
            android:tint="#ff6100"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_left"
            app:layout_constraintCircleAngle="225"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnMarkOptions_recoder_left"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/layout_time"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_time"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/icon64"
            android:tint="@color/color_white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00:00"
            android:textColor="@color/color_white"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controls_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-50dp"
        android:clickable="false"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgTools"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:src="@drawable/ic_tools_app"
            app:layout_constraintBottom_toTopOf="@+id/btnMarkOptions_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnMarkOptions_main" />

        <ImageView
            android:id="@+id/recorder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_record"
            android:tint="#e53935"
            app:layout_constraintBottom_toTopOf="@+id/btnMarkOptions_main"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/screenshot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_app"
            android:tint="#ff6100"
            app:layout_constraintBottom_toBottomOf="@+id/btnMarkOptions_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkOptions_main" />

        <ImageView
            android:id="@+id/panel"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_setting"
            android:tint="#ff6100"
            app:layout_anchorGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkOptions_main" />

        <ImageView
            android:id="@+id/btnMarkOptions_main"
            android:layout_width="@dimen/size_bubble_icon"
            android:layout_height="@dimen/size_bubble_icon"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controls_recorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-36dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/controls_main"
        app:layout_constraintEnd_toEndOf="@+id/controls_main"
        app:layout_constraintStart_toStartOf="@+id/controls_main"
        app:layout_constraintTop_toTopOf="@+id/controls_main">

        <ImageView
            android:id="@+id/resume"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/shape"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:tint="#ff6100"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_right"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pause_black_24dp"
            android:tint="#ff6100"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_right"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_stop_black_24dp"
            android:tint="#ff6100"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_right"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tools_record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_tools_app"
            android:tint="#ff6100"
            app:layout_constraintCircle="@+id/btnMarkOptions_recoder_right"
            app:layout_constraintCircleAngle="135"
            app:layout_constraintCircleRadius="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnMarkOptions_recoder_right"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
