<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/recording_finished"
    android:layout_width="@dimen/_230sdp"
    android:layout_gravity="center"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:layout_height="@dimen/_425sdp">

    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/ic_close_app" />
    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginTop="-25dp"
        android:background="@drawable/finished"
        android:layout_height="@dimen/_60sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Recording"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="is finished"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sdp" />

    <View
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorPrimary" />
    <FrameLayout
        android:id="@+id/video_frame"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="#000"
        >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="@dimen/_30sdp"

            android:layout_height="@dimen/_30sdp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/icon_video_play"
            />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <com.xyz.screen.recorder.adsMAnager.NativeAdSetupSmall
            android:id="@+id/nativeadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/share"
            app:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_home"
            app:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            app:tint="@color/colorPrimaryDark" />



    </RelativeLayout>

    <View
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary" />



</LinearLayout>